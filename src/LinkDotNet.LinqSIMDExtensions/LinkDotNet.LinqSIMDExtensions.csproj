<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <Authors>Steven Giesel (linkdotnet)</Authors>
        <Company>Steven Giesel (linkdotnet)</Company>
        <Title>LinkDotNet.LinqSIMDExtensions</Title>
        <Description>A LINQ-like extensions for C# that uses SIMD extensions to parallelize the operations</Description>
        <PackageProjectUrl>https://github.com/linkdotnet/LinqSIMDExtensions</PackageProjectUrl>
        <RepositoryUrl>https://github.com/linkdotnet/LinqSIMDExtensions</RepositoryUrl>
        <PackageTags>csharp,dotnet,linq,simd,performance</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <TargetFrameworks>net7.0;net6.0;net8.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Update="SonarAnalyzer.CSharp" Version="9.5.0.73987">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
